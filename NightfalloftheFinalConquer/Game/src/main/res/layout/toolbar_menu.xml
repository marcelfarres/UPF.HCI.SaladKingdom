<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    tools:context="example.nightfall_of_the_final_conquer.app.home">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="17sp"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:id="@+id/button_item"
                    android:background="@drawable/item_icon"
                    android:clickable="true"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="17sp"
                    android:textColor="#FFF"
                    android:id="@+id/button_log"
                    android:gravity="center"
                    android:layout_gravity="left|bottom"
                    android:background="@drawable/log_icon"
                    android:clickable="true"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="17sp"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:id="@+id/button_map"
                    android:layout_gravity="left|bottom"
                    android:background="@drawable/map_icon"
                    android:clickable="true"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="17sp"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:id="@+id/button_monsters"
                    android:layout_gravity="left|bottom"
                    android:background="@drawable/monster_icon"
                    android:clickable="true"
                    android:layout_weight="1"/>


            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>