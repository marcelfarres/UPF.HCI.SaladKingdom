<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="example.nightfall_of_the_final_conquer.app.home">

    <include layout="@layout/toolbar_menu"
        android:layout_height="match_parent"
        android:layout_width="wrap_content" />


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/monster_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="left|top"
                android:background="#000"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>



            <TextView
                android:id="@+id/name_monster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Fang"
                android:layout_gravity="top">


            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/in_zone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="In zone: "
                    android:layout_weight="1"
                    android:layout_gravity="top">

                </TextView>

                <TextView
                    android:id="@+id/in_zone_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="5"
                    android:layout_weight="10"
                    android:layout_gravity="top">

                </TextView>

                <TextView
                    android:id="@+id/defeated_or_not"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="Defeated!"
                    android:layout_weight="2"
                    android:layout_gravity="top">

                </TextView>

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:gravity="center_vertical">

                <TableRow>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_span="4"
                        android:text="Monster_stats"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="25sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_span="1"
                        android:text="@string/HP"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/HP_value_monster"
                        android:layout_marginRight="5sp"
                        android:layout_span="1"
                        android:text="000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_span="1"
                        android:text="@string/MP"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/MP_value_monster"
                        android:layout_marginRight="5sp"
                        android:layout_span="1"
                        android:text="000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_span="1"
                        android:text="@string/ATK"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ATK_value_monster"
                        android:layout_marginRight="5sp"
                        android:layout_span="1"
                        android:text="000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_span="1"
                        android:text="@string/DEF"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/DEF_value_monster"
                        android:layout_marginRight="5sp"
                        android:layout_span="1"
                        android:text="000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_span="1"
                        android:text="@string/SP"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/SP_value_monster"
                        android:layout_marginRight="5sp"
                        android:layout_span="1"
                        android:text="000"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>
        </LinearLayout>




    </RelativeLayout>


</FrameLayout>